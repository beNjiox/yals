<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
      <testsuite name="User">
        <!-- <directory suffix=".php">app/tests/User</directory> -->
        <directory suffix=".php">app/tests/Company</directory>
      </testsuite>
    </testsuites>

    <filter>
        <blacklist>
            <directory>./vendor</directory>
            <directory>./app/storage</directory>
            <directory>./app/config</directory>
            <directory>./app/database</directory>
            <directory>./app/start</directory>
            <directory>./bootstrap</directory>
        </blacklist>
    </filter>

</phpunit>